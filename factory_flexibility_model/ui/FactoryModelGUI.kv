# MAIN MENU BAR ########################################################################################################
                    MDTopAppBar:
                        orientation: "horizontal"
                        title: "Factory Model"
                        id: main_menu_bar
                        left_action_items: [["menu", lambda x: main_menu.set_state("open")]]
                        elevation: 0

                        MDLabel:
                            id: label_session_name
                            font_style: "Subtitle2"
                            theme_text_color: "Custom"
