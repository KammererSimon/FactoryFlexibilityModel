<DialogSessionConfig>
    spacing: "12dp"
    padding: (0, 30)
    size_hint: (None, None)
    height: "500dp"
    width: "500dp"
    orientation: "vertical"

    MDLabel:
        text: "Session Settings"
        font_style: "H5"
        size_hint_y: None
        height: dp(35)
        id: label_currency
    MDTextField:
        id: textfield_session_name
        hint_text: "Factory Name"
        required: True
        max_text_length: 30
        helper_text_mode: "on_error"
        helper_text: "Enter a new name for the Project"

    MDTextField:
        id: textfield_session_description
        hint_text: "Factiory Description"
        helper_text_mode: "on_error"
        helper_text: "Enter a brief project description"

    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            MDLabel:
                text: "Currency"
                font_style: "H5"
                size_hint_y: None
                height: dp(35)
                id: label_currency
            BoxLayout:
                orientation: "horizontal"
                MDCheckbox:
                    group: "currency"
                    size_hint_x: None
                    width: dp(30)
                    id: checkbox_euro
                MDLabel:
                    text: "â‚¬"
                MDCheckbox:
                    group: "currency"
                    size_hint_x: None
                    width: dp(30)
                    id: checkbox_dollar
                MDLabel:
                    text: "$"
        BoxLayout:
            orientation: "vertical"
            MDLabel:
                text: "Show component definition menu on creation"
                size_hint_y: None
                height: dp(35)
            MDCheckbox:
                size_hint_x: None
                width: dp(30)
                id: checkbox_config

    MDLabel:
        text: "Simulation Parameters"
        font_style: "H5"
        size_hint_y: None
        height: dp(35)

    MDTextField:
        id: textfield_session_timesteps
        hint_text: "Number of Timesteps for Simulation"
        helper_text_mode: "on_error"
        helper_text: "Enter an Integer"

    BoxLayout:
        orientation: "horizontal"
        MDCheckbox:
            size_hint_x: None
            width: dp(30)
            id: checkbox_slack
        MDLabel:
            text: "Enable Slacks"
