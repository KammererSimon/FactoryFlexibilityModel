    # This file specifies the layout for the dialog that openes when the user wants to create a new session.
# It contains a textfield to input a session name, a file-directory browser to specify a path for the session
# and a textfield to enter a project description.

<DialogNewSession>

    spacing: "12dp"
    padding: (0, 30)
    size_hint: (None, None)
    height: "200dp"
    width: "500dp"
    orientation: "vertical"

    MDTextField:
        id: textfield_new_session_name
        hint_text: "Project name"
        required: True
        max_text_length: 30
        helper_text_mode: "on_error"
        helper_text: "Enter a name for the new Project"

    MDLabel:
        text: "Session folder path"
        font_style: "H6"
        size_hint_y: None
        height: self.texture_size[1]
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: dp(60)
        MDIconButton:
            id: button_session_folder
            icon: "folder-outline"
            size_hint_y: None
        MDTextField:
            id: label_session_folder
            disabled: True
