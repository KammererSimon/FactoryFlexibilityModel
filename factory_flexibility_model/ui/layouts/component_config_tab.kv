#:import import_scheduler_demands factory_flexibility_model.ui.utility.import_scheduler_demands.import_scheduler_demands
#:import show_component_definition_dialog factory_flexibility_model.ui.dialogs.dialog_component_definition.show_component_definition_dialog


<layout_component_definition>
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)

        MDBoxLayout:
            size_hint_y: None
            height: dp(80)
            orientation: "horizontal"
            MDBoxLayout:
                orientation: "vertical"
                MDLabel:
                    id: label_component_name
                    font_style: "H5"
                    size_hint_y: None
                    height: dp(35)
                    max_text_length: 20
                MDBoxLayout:
                    orientation: "horizontal"
                    MDLabel:
                        id: label_info
                        size_hint_y: None
                        height: dp(35)
                    MDIconButton:
                        icon:"pencil"
                        on_release: show_component_definition_dialog(app)
                        size_hint: (None, None)
                        width: dp(30)
                        height: dp(30)
            Image:
                id: image_component_icon
                size_hint: (None, None)
                height: dp(70)
                width: dp(100)
                on_touch_down:  if self.collide_point(*args[1].pos): app.show_icon_selection_dropdown(self)

        MDLabel:
            id: textfield_description
            size_hint_y: None
            height: dp(50)

<layout_component_configuration>
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        MDLabel:
            text: "Operating Constraints"
            font_style: "H6"
            size_hint_y: None
            height: dp(30)
        ScrollView:
            MDList:
                id: list_attributes
