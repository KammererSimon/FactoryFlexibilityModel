#:import new_session factory_flexibility_model.ui.utility.basic_session_functions.initiate_new_session
#:import load_session factory_flexibility_model.ui.utility.basic_session_functions.load_session
#:import save_session factory_flexibility_model.ui.utility.basic_session_functions.save_session
#:import show_dialog_save_session_as factory_flexibility_model.ui.gui_components.main_menu.dialog_save_session_as.show_dialog_save_session_as
#:import import_timeseries_xlsx factory_flexibility_model.ui.utility.io.import_timeseries.import_timeseries_xlsx

<main_menu>
    orientation: "vertical"
    spacing: "20dp"
    padding: "8dp"
    Image:
        source: "factory_flexibility_model\\ui\\assets\\logo_small.png"
        id: image_logo
        height: 200
        size_hint_y: None

    MDLabel:
        text: "WattsInsight"
        font_style: 'H5'
        size_hint_y: None
        height: self.texture_size[1]

    MDList:
        OneLineIconListItem:
            text: "New Session"
            on_release: new_session(app)
            IconLeftWidget:
                icon: "new-box"
        OneLineIconListItem:
            text: "Save Session as"
            on_release: show_dialog_save_session_as(app)
            IconLeftWidget:
                icon: "content-save-plus"
        OneLineIconListItem:
            text: "Save Session "
            on_release: save_session(app)
            IconLeftWidget:
                icon: "content-save"
        OneLineIconListItem:
            text: "Open Session"
            on_release: load_session(app)
            IconLeftWidget:
                icon: "folder-open"
        OneLineIconListItem:
            text: "Import Timeseries Data"
            on_release: import_timeseries_xlsx(app)
            IconLeftWidget:
                icon: "import"
    Widget

    Image:
        source: "factory_flexibility_model\\ui\\assets\\logo_volterica.png"
        height: 100
        size_hint_y: None

    MDLabel:
        id: label_version
        size_hint_y: None
        height: dp(50)
    MDLabel:
        size_hint_y: None
        height: dp(50)
        text: "simon.kammerer@volterica.com"
    MDLabel:
        size_hint_y: None
        height: dp(50)
        text: "Version 1.2 | June 2024"
