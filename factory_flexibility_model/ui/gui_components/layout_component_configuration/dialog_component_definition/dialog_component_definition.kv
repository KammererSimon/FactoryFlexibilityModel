#:import show_flowtype_selection_dropdown factory_flexibility_model.ui.gui_components.layout_component_configuration.dropdown_flowtype_selection.dropdown_flowtype_selection.show_flowtype_selection_dropdown

<DialogComponentDefinition>
    spacing: "12dp"
    padding: (0, 30)
    size_hint: (None, None)
    height: "200dp"
    width: "400dp"
    BoxLayout:
        orientation: "vertical"
        MDTextField:
            id: textfield_name
            hint_text: "Component Name"
            required: True
            max_text_length: 20

        MDTextField:
            id: textfield_description
            hint_text: "Component Description"

        MDRaisedButton:
            id: button_flowtype
            hint_text: 'Flowtype'
            icon_right: "arrow-down-drop-circle-outline"
            on_release: show_flowtype_selection_dropdown(app, self)
